<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiragu.moviehub.Ui.fragments.MovieDetailFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/wallpaperImageView"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/wallpaper1" />

            <TextView
                android:id="@+id/movieTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/wallpaperImageView"
                android:layout_marginTop="38dp"
                android:layout_toEndOf="@+id/wallpaperImageView"
                android:layout_toRightOf="@+id/wallpaperImageView"
                android:paddingLeft="1dp"
                android:text="Movie Title"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movieTitleTextView"
                android:layout_marginTop="14dp"
                android:layout_toEndOf="@+id/wallpaperImageView"
                android:layout_toRightOf="@+id/wallpaperImageView"
                android:text="Release Date"
                android:textColor="#fff"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/releaseDateTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ReleaseDate"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/wallpaperImageView"
                android:layout_toRightOf="@+id/wallpaperImageView"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/releaseDateTextView1"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/wallpaperImageView"
                android:layout_toRightOf="@+id/wallpaperImageView"
                android:text="Votes"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/voteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/wallpaperImageView"
                android:layout_toRightOf="@+id/wallpaperImageView"
                android:text="TextView"
                android:textColor="@color/colorAccent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/overView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:text="About the Movie"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/floatingActionButton">

        </ScrollView>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_save_white_24dp" />

        <TextView
            android:id="@+id/overView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="TextView"
            android:layout_below="@+id/scrollView2"
            android:layout_toRightOf="@+id/scrollView2"
            android:layout_toEndOf="@+id/scrollView2" />

    </RelativeLayout>

</FrameLayout>